{
  "name": "nxus-clientjs",
  "version": "3.0.0-0",
  "description": "Client JS compilation for Nxus applications",
  "main": "lib/",
  "scripts": {
    "test": "NODE_ENV=test mocha --compilers js:babel-core/register -R spec",
    "compile": "babel src --out-dir lib ",
    "prepublish": "npm run compile",
    "postpublish": "npm run docs-readme && npm run commit-update-docs",
    "docs-readme": "export NAME=`npm view . name`; export VERSION=`npm view . version`; documentation readme ./src/*.js --name $NAME --project-version $VERSION --readme-file ./README.md -s $NAME",
    "commit-update-docs": "git add ./README.md && git commit -m 'Updated README API Docs' && git push"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nxus/clientjs.git"
  },
  "keywords": [
    "nxus",
    "client",
    "browserify"
  ],
  "author": "mjreich",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nxus/clientjs/issues"
  },
  "homepage": "https://github.com/nxus/clientjs",
  "dependencies": {
    "babel-cli": "^6.6.5",
    "babel-preset-es2015": "^6.6.0",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "fs-extra": "^0.30.0",
    "watchify": "^3.6.1"
  },
  "peerDependencies": {
    "nxus-core": "^3.0.0-0",
    "nxus-router": "^3.0.0-0"
  },
  "devDependencies": {
    "babel-core": "^6.9.0",
    "mocha": "^2.2.5",
    "should": "^7.0.2",
    "sinon": "^1.17.2",
    "chai": "^3.5.0",
    "documentation": "^4.0.0-beta",
    "chai-as-promised": "^5.2.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-cli": "^6.9.0"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  }
}
